{
  "name": "visual-regression-starter",
  "version": "1.0.0",
  "description": "Visual regression testing starter using Scrnpix baselines and pixelmatch diffs",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "playwright test",
    "baseline": "tsx src/cli.ts baseline",
    "baseline:update": "tsx src/cli.ts baseline --update",
    "compare": "tsx src/cli.ts compare"
  },
  "dependencies": {
    "pixelmatch": "^6.0.0",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/node": "^22.0.0",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "eslint": "^9.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=20"
  },
  "license": "MIT"
}
